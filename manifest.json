{
    "manifest_version": 2,
    "name": "FreeKinopoisk",
    "version": "2.0",
    "description": "Смотри любые фильмы на кинопоиске бесплатно!",
    "icons": {
        "128": "128.png",
        "256": "256.png"
    },
    "content_scripts": [
        {
            "matches": ["*://www.kinopoisk.ru/film/*", "*://www.kinopoisk.ru/series/*"],
            "js": ["content_script.js"]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        "button.html"
    ]
}
